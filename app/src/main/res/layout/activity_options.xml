<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="178dp"
        android:layout_height="162dp"
        app:srcCompat="@drawable/virtualttattoo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="79dp"
        android:layout_height="84dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <ImageView
        android:id="@+id/imageViewFacebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/facebook_icon"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

    <ImageView
        android:id="@+id/imageViewTwitter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/twitter"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFacebook" />

    <ImageView
        android:id="@+id/imageViewGoogle"
        android:layout_width="47dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/googleplus"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTwitter" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-Mail"
        app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <Button
        android:id="@+id/buttonFacebook"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:text="Connect"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewTwitter"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button10"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:text="Connect"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewGoogle"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonFacebook" />

    <Button
        android:id="@+id/button9"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:text="Connect"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewFacebook"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:text="Edit"
        android:textSize="10sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.866"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

</android.support.constraint.ConstraintLayout>
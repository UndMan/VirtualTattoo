<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="178dp"
            android:layout_height="162dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:srcCompat="@drawable/virtualttattoo" />

        <ImageView
            android:id="@+id/imageViewUser"
            android:layout_width="79dp"
            android:layout_height="84dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/imageViewFacebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewUser"
            app:srcCompat="@drawable/facebook_icon" />

        <ImageView
            android:id="@+id/imageViewTwitter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFacebook"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/imageViewGoogle"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTwitter"
            app:srcCompat="@drawable/googleplus" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="14dp"
            android:text="e-Mail"
            app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="48dp"
            android:text="Username"
            app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

        <Button
            android:id="@+id/buttonFacebook"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="22dp"
            android:text="Connect"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewTwitter"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <Button
            android:id="@+id/button10"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="21dp"
            android:text="Connect"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewGoogle"
            app:layout_constraintTop_toBottomOf="@+id/buttonFacebook" />

        <Button
            android:id="@+id/button9"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="128dp"
            android:text="Connect"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewFacebook"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="55dp"
            android:text="Edit"
            android:textSize="10sp"
            app:layout_constraintHorizontal_bias="0.866"
            app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-57dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="visible"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintTop_toBottomOf="@id/button10"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>